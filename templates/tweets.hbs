<div class='containter'>
  <h1>Twitter</h1>

  <form>
    <div class='form-group'>
      <label for="message">New Tweet</label>
      {{textarea cols='10' rows='4' id="message" class="form-control" value=message}}
    </div>
    <button class='btn btn-default' {{action 'saveTweet'}}>Save</button>
  </form>

  {{#each controller}}
    <div class='well'>
      <div {{action 'showDate'}}>
        {{message}}
        <br>
        {{#if isShowing}}
        {{date}}
        {{/if}}
      </div>
      <form>
        <div class='form-group'>
          <label for="replies">Reply to the Tweet</label>
          {{textarea cols='10' rows='4' class='form-control' value=reply}}
          <button class='btn btn-default' {{action 'saveReply'}}>Reply</button>
        </div>
      </form>
    </div>
  {{/each}}


</div>
